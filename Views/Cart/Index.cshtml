@model IEnumerable<ShoesStoreWebsite.Models.Product_Item>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Shoes.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Shoes.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>Sub-Total</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cart in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => cart.Shoes.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => cart.Shoes.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => cart.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => (cart.SubTotal))
            </td>
            <td>
                <img src="@cart.Shoes.URLImage" alt="Shoe Image" style="max-width: 100px; max-height: 100px;" />
            </td>

            <td>
                @Html.ActionLink("+", "Add", "Cart", new { id = cart.Shoes.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("-", "Minus", "Cart", new { id = cart.Shoes.Id }, new { @class = "btn btn-danger" })
            ​
            </td>
            <td>
                @Html.ActionLink("Remove", "Remove", "Cart", new { id = cart.Shoes.Id }, new { @class = "btn btn-danger" })
            </td>
            <td>
                @Html.ActionLink("Buy", "Buy", "Cart", new { id = cart.Shoes.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }
        <tr>
            <td colspan="5" style="text-align:right">
                Total: @ViewBag.total
            </td>
        </tr>
    </tbody>
</table>