<form class="Ìnormations" id="formInformation" asp-action="ProcessOrder" method="post" onsubmit="return Confirm()">
    <h2 class="mb-4">Recipient Information</h2>
    <div class="mb-3">
        <input type="text" class="form-control" id="fullname" placeholder="Name">
    </div>
    <div class="mb-3">
        <input type="text" class="form-control" id="age" placeholder="Age">
    </div>
    <div class="mb-3">
        <select class="form-select" id="provinces">
            <option value="" disabled selected hidden>Province/City</option>
            <option value="Ha Noi">Ha Noi</option>
            <option value="Thai Binh">Thai Binh</option>
            <option value="TP. Ho Chi Minh">TP. Ho Chi Minh</option>
            <option value="Binh Duong">Binh Duong</option>
        </select>
    </div>
    <div class="mb-3">
        <input type="text" class="form-control" id="homeaddress" placeholder="Home address: stress, ward, district">
    </div>
    <div class="mb-3">
        <input type="tel" class="form-control" id="phone" placeholder="Phone number" pattern="[0-9]{10}" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Payment:</label>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" checked>
            <label class="form-check-label">
                Cash
            </label>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label">Gender:</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="gender" id="male" checked>
            <label class="form-check-label" for="male">
                Male
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="gender" id="female">
            <label class="form-check-label" for="female">
                Female
            </label>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
    }

    <form class="Ìnormations" id="formInformation" asp-controller="Cart" asp-action="ProcessOrder" method="post" onsubmit="return Confirm()">
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>


    <br />
    <button type="button" class="btn btn-secondary" onclick="window.location.href='/Cart/Index'">Cancel</button>
</form>

<script>
    function Confirm() {
        if (confirm("Successful purchase")) {
            window.location.href = '/Home'; 
            return true; 
        } else {
            return false; 
        }
    }
</script>

